{{#with data}}
<div class="container">
    <h1 class="my-4">Course title : {{courseDetails.title}}
    </h1>

    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" src="{{courseDetails.imageUrl}}" alt="JavaScript" />
        </div>

        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{courseDetails.description}}</p>

            {{#if isCreator}}
            <a class="btn btn-danger" href="/course/delete/{{courseDetails._id}}">Delete</a>
            <a class="btn btn-warning" href="/course/edit/{{courseDetails._id}}">Edit</a>
            {{else if courseEnrolled}}
            <span class="enrolled-span">You are already enrolled</span>
            {{else}}
            <a class="btn btn-primary" href="/course/enroll/{{courseDetails._id}}">Enroll</a>
            {{/if}}

        </div>
    </div>
</div>
{{/with}}