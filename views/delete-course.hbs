{{#with data}}
<form class="text-center border border-light p-5" action="/course/delete/{{courseDetails._id}}" method="POST">
    <h1>Delete Course</h1>
    <div class="form-group">
        <label for="title">Course Title</label>
        <input type="text" class="form-control" placeholder="Course name" value="{{courseDetails.title}}" name="title">
    </div>
    <div class="form-group">
        <label for="description">Course Description</label>
        <textarea class="form-control" placeholder="Description" name="description">{{courseDetails.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="imageUrl">Image url</label>
        <input type="text" class="form-control" placeholder="Image Url" value="{{courseDetails.imageUrl}}" name="imageUrl">
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
</form>
{{/with}}